<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <RadioGroup
        android:id="@+id/radio_zuoweiandcaidan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/zuowei"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="座位安排"
            android:textColor="#ffffff" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/zuowei"
            android:button="@null"
            android:gravity="center"
            android:text="菜单编辑"
            android:textColor="#ffffff" />
    </RadioGroup>

    <TextView
        android:id="@+id/showzuowei"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="请输入本桌名称和本桌人员"
        android:textColor="#666666"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/showcaidan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="菜名"
            android:textColor="#ff5500"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:background="#dddddd"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/caiming"
                android:layout_width="200dp"
                android:layout_height="44dp"
                android:background="#ffffff"
                android:hint="请输入菜名"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/addcaidan"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@null"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/smalladdbutton" />
    </LinearLayout>

    <ListView
        android:id="@+id/listcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/diviercolor"
        android:dividerHeight="1px"
        android:fadingEdge="none"
        android:fastScrollEnabled="true"
        android:scrollbars="none" >
    </ListView>

</LinearLayout>